/* pages/medals/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-btn image, .more-btn image {
  width: 36rpx;
  height: 36rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.progress-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.progress-text {
  font-size: 28rpx;
  color: #2b8cee;
  font-weight: 500;
}

.progress-bar {
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.featured-section {
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 30rpx;
  display: block;
}

.featured-medal {
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(43, 140, 238, 0.3);
}

.medal-image {
  width: 160rpx;
  height: 160rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.medal-info {
  text-align: center;
}

.medal-name {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  display: block;
}

.medal-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
  display: block;
}

.medal-date {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.medal-date image {
  width: 28rpx;
  height: 28rpx;
}

.share-btn {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 20rpx 40rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.share-btn image {
  width: 32rpx;
  height: 32rpx;
}

.medals-section {
  padding: 20rpx 30rpx;
}

.medals-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 30rpx;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.medal-item:active {
  transform: scale(0.95);
}

.medal-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f3f4f6;
  border: 4rpx solid #e5e7eb;
}

.medal-icon-container.unlocked {
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  border-color: #2b8cee;
  box-shadow: 0 4rpx 12rpx rgba(43, 140, 238, 0.3);
}

.medal-icon-container.locked {
  opacity: 0.5;
}

.medal-icon {
  width: 60rpx;
  height: 60rpx;
}

.medal-name {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
  text-align: center;
}

.medal-status {
  font-size: 24rpx;
  color: #666666;
}