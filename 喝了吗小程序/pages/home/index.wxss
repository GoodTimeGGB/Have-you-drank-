/* pages/home/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.nickname {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.settings-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.settings-btn image {
  width: 36rpx;
  height: 36rpx;
}

.title-section {
  padding: 20rpx 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.progress-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.progress-container {
  position: relative;
  width: 400rpx;
  height: 400rpx;
}

.progress-circle {
  width: 100%;
  height: 100%;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.current-cups {
  font-size: 88rpx;
  font-weight: 800;
  color: #1a1a1a;
}

.goal-cups {
  font-size: 48rpx;
  font-weight: 700;
  color: #666666;
}

.unit {
  display: block;
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.reminder-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.reminder-pill {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: rgba(43, 140, 238, 0.1);
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.reminder-icon {
  width: 32rpx;
  height: 32rpx;
}

.reminder-text {
  font-size: 28rpx;
  color: #2b8cee;
  font-weight: 500;
}

.action-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 30rpx;
}

.add-cup-btn {
  width: 100%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(43, 140, 238, 0.3);
}

.btn-content {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: white;
  font-weight: 700;
}

.btn-text {
  font-size: 36rpx;
  color: white;
  font-weight: 700;
}

.add-cup-btn:active {
  transform: scale(0.98);
}

.history-section {
  padding: 20rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.view-all-btn {
  font-size: 28rpx;
  color: #2b8cee;
  font-weight: 500;
}

.history-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.history-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-date {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  text-transform: uppercase;
}

.history-cups {
  font-size: 48rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.history-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.history-status image {
  width: 24rpx;
  height: 24rpx;
}

.history-status.ok {
  background-color: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.history-status.goal {
  background-color: rgba(43, 140, 238, 0.1);
  color: #2b8cee;
}

.history-status.low {
  background-color: rgba(251, 146, 60, 0.1);
  color: #fb923c;
}