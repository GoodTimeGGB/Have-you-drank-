/* pages/settings/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.back-btn image {
  width: 36rpx;
  height: 36rpx;
}

.save-btn {
  font-size: 28rpx;
  color: #2b8cee;
  font-weight: 500;
}

.user-section {
  display: flex;
  align-items: center;
  gap: 30rpx;
  padding: 40rpx 30rpx;
  background-color: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid #f3f4f6;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.user-name {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.user-desc {
  font-size: 24rpx;
  color: #666666;
}

.settings-section {
  padding: 0 30rpx 20rpx;
}

.setting-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.setting-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.setting-value {
  color: #2b8cee;
  font-weight: 500;
}

.setting-switch {
  transform: scale(0.8);
}

.setting-slider {
  margin: 20rpx 0;
}

.slider-indicators {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.setting-picker {
  background-color: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
}

.picker-display {
  text-align: center;
  font-size: 28rpx;
  color: #1a1a1a;
}

.quiet-hours {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e5e7eb;
}

.quiet-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.quiet-time text {
  font-size: 28rpx;
  color: #1a1a1a;
}

.time-picker {
  background-color: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
}

.time-display {
  font-size: 28rpx;
  color: #2b8cee;
}

.footer-section {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.footer-link {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.footer-btn {
  text-align: center;
  font-size: 28rpx;
  color: #ef4444;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}