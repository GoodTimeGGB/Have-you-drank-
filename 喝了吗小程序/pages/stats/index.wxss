/* pages/stats/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.share-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.share-btn image {
  width: 36rpx;
  height: 36rpx;
}

.stats-cards {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
}

.stat-card {
  flex: 1;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.stat-value {
  font-size: 56rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.stat-unit {
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}

.chart-section {
  padding: 20rpx 30rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.chart-toggle {
  display: flex;
  gap: 10rpx;
  background-color: white;
  padding: 8rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.toggle-btn {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  background-color: transparent;
}

.toggle-btn.active {
  background-color: #2b8cee;
  color: white;
}

.chart-container {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.bar-chart {
  width: 100%;
  height: 300rpx;
}

.timeline-section {
  padding: 20rpx 30rpx;
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.timeline {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.timeline-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 19rpx;
  top: 60rpx;
  bottom: -20rpx;
  width: 2rpx;
  background-color: #e5e7eb;
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #2b8cee;
  border: 6rpx solid white;
  box-shadow: 0 0 0 4rpx rgba(43, 140, 238, 0.2);
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
}

.timeline-time {
  font-size: 28rpx;
  color: #2b8cee;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.timeline-text {
  font-size: 24rpx;
  color: #666666;
}