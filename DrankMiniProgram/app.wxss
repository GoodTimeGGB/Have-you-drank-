/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background-color: #f6f7f8;
  color: #333333;
  font-size: 32rpx;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0 30rpx;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #2b8cee;
  color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin: 20rpx 0;
  box-shadow: 0 8rpx 16rpx rgba(43, 140, 238, 0.2);
}

.btn-primary:active {
  background-color: #1a6bb5;
  transform: scale(0.98);
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 文字颜色 */
.text-primary { color: #2b8cee; }
.text-secondary { color: #666666; }
.text-muted { color: #999999; }

/* 响应式网格 */
.grid-3 {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}