/* pages/feedback/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.back-btn image {
  width: 36rpx;
  height: 36rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.content {
  padding: 40rpx 30rpx;
}

.feedback-form {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  display: block;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 28rpx;
  color: #666666;
}

.radio-item radio {
  transform: scale(0.8);
}

.feedback-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  line-height: 1.6;
}

.feedback-input::placeholder {
  color: #999999;
}

.contact-input {
  width: 100%;
  padding: 20rpx;
  background-color: #f9fafb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
}

.contact-input::placeholder {
  color: #999999;
}

.submit-btn {
  width: 100%;
  background-color: #2b8cee;
  color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
}

.submit-btn:disabled {
  background-color: #93c5fd;
}

.tips {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 30rpx;
}