/* pages/home/index.wxss */
.container {
  position: relative;
  display: flex;
  min-height: 100vh;
  width: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #f6f7f8;
}

/* TopAppBar */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx 12rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(12rpx);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar-container {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.online-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 12rpx;
  height: 12rpx;
  background-color: #10b981;
  border: 2rpx solid white;
  border-radius: 50%;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.2;
}

.nickname {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.2;
}

.settings-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24rpx;
  height: 24rpx;
  padding: 8rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.2s ease;
}

.settings-btn:active {
  background-color: rgba(255, 255, 255, 1);
}

.settings-icon {
  width: 100%;
  height: 100%;
}

/* Main Content */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 24rpx 100rpx;
}

/* Page Title */
.page-title {
  font-family: 'Manrope', sans-serif;
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 32rpx;
}

/* Progress Section */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-container {
  position: relative;
  width: 256rpx;
  height: 256rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-glow {
  position: absolute;
  inset: 0;
  background-color: rgba(43, 140, 238, 0.2);
  border-radius: 50%;
  filter: blur(32rpx);
  transform: scale(0.9);
}

.progress-circle {
  position: relative;
  width: 100%;
  height: 100%;
}

.circle-canvas {
  width: 100%;
  height: 100%;
  transform: rotate(-90deg);
}

.progress-text {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.cups-container {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.current-cups {
  font-family: 'Manrope', sans-serif;
  font-size: 128rpx;
  font-weight: 800;
  color: #1a1a1a;
  letter-spacing: -2rpx;
  line-height: 1;
}

.goal-cups {
  font-family: 'Manrope', sans-serif;
  font-size: 64rpx;
  font-weight: 700;
  color: #666666;
  line-height: 1;
}

.unit {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 500;
  color: #999999;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 8rpx;
}

/* Reminder Section */
.reminder-section {
  margin-bottom: 40rpx;
}

.reminder-pill {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 32rpx;
  background-color: rgba(43, 140, 238, 0.1);
  border-radius: 40rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.reminder-icon {
  width: 20rpx;
  height: 20rpx;
}

.reminder-text {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #2b8cee;
  letter-spacing: 0.5rpx;
}

/* Action Section */
.action-section {
  margin-bottom: 48rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.add-cup-btn {
  position: relative;
  width: 280rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(43, 140, 238, 0.3);
  transition: all 0.2s ease;
  overflow: hidden;
}

.add-cup-btn-hover {
  background: linear-gradient(135deg, #1a6bb5 0%, #0f4a8a 100%);
  transform: scale(0.95);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 16rpx;
}

.add-icon-container {
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.add-cup-btn-hover .add-icon-container {
  transform: rotate(90deg);
}

.add-icon {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  line-height: 1;
}

.btn-text {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 1rpx;
}

/* Stats Header */
.stats-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.section-title {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.view-all-btn {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 700;
  color: #2b8cee;
  text-decoration: underline;
  transition: color 0.2s ease;
}

.view-all-btn:active {
  color: #1a6bb5;
}

/* History Grid */
.history-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  width: 100%;
}

.history-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.history-item:active {
  transform: scale(0.98);
}

.history-date {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.history-cups {
  font-family: 'Manrope', sans-serif;
  font-size: 64rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1;
}

.history-status {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-family: 'Manrope', sans-serif;
  font-size: 20rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.history-status.ok {
  background-color: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.history-status.goal {
  background-color: rgba(43, 140, 238, 0.1);
  color: #2b8cee;
  border: 1rpx solid rgba(43, 140, 238, 0.2);
  box-shadow: 0 0 0 1rpx rgba(43, 140, 238, 0.1);
  position: relative;
  overflow: hidden;
}

.history-status.goal::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
  background-color: #2b8cee;
}

.history-status.low {
  background-color: rgba(251, 146, 60, 0.1);
  color: #fb923c;
}

.status-icon {
  width: 12rpx;
  height: 12rpx;
}

.status-text {
  font-size: 20rpx;
}


