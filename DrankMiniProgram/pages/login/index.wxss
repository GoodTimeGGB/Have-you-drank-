/* pages/login/index.wxss */
.container {
  position: relative;
  display: flex;
  min-height: 100vh;
  width: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #f6f7f8;
}

/* Decorative Background Bubbles */
.bg-bubble {
  position: absolute;
  border-radius: 50%;
  filter: blur(32rpx);
  pointer-events: none;
}

.bubble-1 {
  top: -10%;
  left: -10%;
  width: 256rpx;
  height: 256rpx;
  background-color: rgba(43, 140, 238, 0.05);
  animation: float 6s ease-in-out infinite;
}

.bubble-2 {
  bottom: 20%;
  right: -5%;
  width: 192rpx;
  height: 192rpx;
  background-color: rgba(43, 140, 238, 0.1);
  animation: float 8s ease-in-out infinite;
  animation-delay: 2s;
}

.bubble-3 {
  top: 40%;
  left: 20%;
  width: 96rpx;
  height: 96rpx;
  background-color: rgba(59, 130, 246, 0.05);
}

@keyframes float {
  0% {
    transform: translateY(0rpx);
  }
  50% {
    transform: translateY(-80rpx);
  }
  100% {
    transform: translateY(0rpx);
  }
}

/* Main Content Container */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  max-width: 480px;
  margin: 0 auto;
  padding: 24rpx;
  position: relative;
  z-index: 10;
}

/* Spacer */
.spacer {
  height: 32rpx;
  flex-shrink: 0;
}

/* Top Section */
.top-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

/* Hero Illustration */
.hero-container {
  position: relative;
  width: 256rpx;
  height: 256rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.hero-bg {
  position: absolute;
  inset: 0;
  background-color: rgba(43, 140, 238, 0.1);
  border-radius: 50%;
  transform: scale(0.9);
}

.hero-image {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 10;
}

/* Text Group */
.text-group {
  text-align: center;
  margin-top: 16rpx;
}

.title {
  display: flex;
  justify-content: center;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.english-title {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 800;
  line-height: 1.2;
  color: #1a1a1a;
  letter-spacing: -0.5rpx;
}

.chinese-title {
  font-family: 'Noto Sans', sans-serif;
  font-size: 32rpx;
  font-weight: 800;
  line-height: 1.2;
  color: #2b8cee;
  letter-spacing: -0.5rpx;
}

.slogan {
  display: block;
  font-family: 'Noto Sans', sans-serif;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.4;
  color: #666666;
  padding: 0 16rpx;
  margin-bottom: 4rpx;
}

.subtitle {
  display: block;
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.4;
  color: #999999;
  padding: 0 16rpx;
  opacity: 0.8;
}

/* Bottom Section */
.bottom-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

/* Login Button */
.login-btn {
  position: relative;
  width: 100%;
  height: 56rpx;
  background-color: #2b8cee;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(43, 140, 238, 0.2);
  transition: all 0.2s ease;
}

.login-btn-hover {
  background-color: #1a6bb5;
  transform: scale(0.98);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 12rpx;
}

.wechat-icon {
  width: 24rpx;
  height: 24rpx;
}

.btn-text {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 1rpx;
}

/* Legal Section */
.legal-section {
  text-align: center;
  margin-top: 16rpx;
}

.legal-text {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 1.4;
}

.legal-link {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #2b8cee;
  text-decoration: underline;
  transition: color 0.2s ease;
}

.legal-link:active {
  color: #1a6bb5;
}
