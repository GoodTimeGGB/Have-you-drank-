/* pages/settings/index.wxss */
.container {
  position: relative;
  display: flex;
  min-height: 100vh;
  width: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #f6f7f8;
}

/* Top App Bar */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(12rpx);
  border-bottom: 1rpx solid #e5e7eb;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.back-btn:active {
  background-color: rgba(43, 140, 238, 0.1);
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
}

.back-text {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 500;
  color: #2b8cee;
}

.page-title {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
  flex: 1;
  margin: 0 24rpx;
}

.save-btn {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #2b8cee;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.save-btn:active {
  background-color: rgba(43, 140, 238, 0.1);
}

/* Avatar and Nickname */
.avatar-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f6f7f8;
}

.avatar-btn {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #2b8cee;
  padding: 8rpx 16rpx;
  background-color: #f6f7f8;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.avatar-btn:active {
  background-color: #e5e7eb;
}

.nickname-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname-text {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nickname-btn {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #2b8cee;
  padding: 8rpx 16rpx;
  background-color: #f6f7f8;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.nickname-btn:active {
  background-color: #e5e7eb;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Section */
.section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-title {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 700;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  padding: 0 8rpx;
}

.section-content {
  background-color: white;
  border-radius: 20rpx;
  border: 1rpx solid #e5e7eb;
  overflow: hidden;
}

/* Setting Item */
.setting-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.label-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.setting-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.setting-name {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.setting-desc {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 1.4;
  margin-top: 8rpx;
}

.setting-desc-small {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}

.setting-switch {
  transform: scale(0.8);
}

/* Goal Controls */
.goal-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: #f6f7f8;
  padding: 8rpx;
  border-radius: 12rpx;
}

.goal-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.goal-btn:active {
  transform: scale(0.95);
  background-color: #f0f0f0;
}

.goal-value {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  min-width: 40rpx;
  text-align: center;
}

/* Setting Picker */
.setting-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background-color: #f6f7f8;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.picker-display:active {
  background-color: #e5e7eb;
}

.picker-text {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}

.picker-icon {
  width: 16rpx;
  height: 16rpx;
  opacity: 0.6;
}

/* Quiet Hours */
.quiet-hours {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e5e7eb;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
}

.quiet-time {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 16rpx;
}

.quiet-time:first-child {
  border-right: 1rpx solid #e5e7eb;
}

.time-label {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 500;
  color: #666666;
}

.time-picker {
  width: 100%;
}

.time-display {
  padding: 16rpx;
  background-color: #f6f7f8;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.time-display:active {
  background-color: #e5e7eb;
}

.time-text {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: #2b8cee;
  text-align: center;
}

/* Content End */
.content-end {
  height: 24rpx;
  width: 100%;
}

/* Bottom Background */
::view-deep::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f6f7f8;
  pointer-events: none;
  z-index: -1;
}
