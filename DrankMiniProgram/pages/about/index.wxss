/* pages/about/index.wxss */
.container {
  padding: 0;
  background-color: #f6f7f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(10rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.back-btn image {
  width: 36rpx;
  height: 36rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.content {
  padding: 40rpx 30rpx;
}

.about-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 60rpx;
  padding: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logo-container {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(43, 140, 238, 0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo {
  width: 80rpx;
  height: 80rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.app-version {
  font-size: 28rpx;
  color: #666666;
}

.info-section {
  margin-bottom: 50rpx;
  padding: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  display: block;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.feature-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.feature-text {
  font-size: 28rpx;
  color: #1a1a1a;
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

.contact-text {
  font-size: 28rpx;
  color: #1a1a1a;
}