/* pages/stats/index.wxss */
.container {
  position: relative;
  display: flex;
  min-height: 100vh;
  width: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #f6f7f8;
}

/* Top App Bar */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background-color: rgba(246, 247, 248, 0.95);
  backdrop-filter: blur(12rpx);
  border-bottom: 1rpx solid #e5e7eb;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.online-status {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 12rpx;
  height: 12rpx;
  background-color: #10b981;
  border: 2rpx solid white;
  border-radius: 50%;
}

.page-title {
  flex: 1;
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
  margin-right: 40rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24rpx;
  height: 24rpx;
  padding: 8rpx;
  border-radius: 50%;
  background-color: rgba(43, 140, 238, 0.1);
  transition: background-color 0.2s ease;
}

.share-btn:active {
  background-color: rgba(43, 140, 238, 0.2);
}

.share-icon {
  width: 100%;
  height: 100%;
}

/* Main Content */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 24rpx;
}

/* Summary Card */
.summary-card {
  position: relative;
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(43, 140, 238, 0.3);
}

.decorative-circle {
  position: absolute;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
  filter: blur(24rpx);
}

.circle-1 {
  top: -32rpx;
  right: -32rpx;
  width: 128rpx;
  height: 128rpx;
}

.circle-2 {
  bottom: -24rpx;
  left: -24rpx;
  width: 96rpx;
  height: 96rpx;
}

.summary-content {
  position: relative;
  z-index: 10;
}

.summary-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.left-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-label {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.summary-value {
  font-family: 'Manrope', sans-serif;
  font-size: 48rpx;
  font-weight: 800;
  color: white;
  line-height: 1.2;
}

.right-section {
  display: flex;
  align-items: center;
}

.trend-pill {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(8rpx);
}

.trend-icon {
  width: 16rpx;
  height: 16rpx;
}

.trend-text {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 700;
  color: white;
}

.progress-bar {
  position: relative;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-bg {
  position: absolute;
  inset: 0;
  background-color: rgba(255, 255, 255, 0.2);
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: white;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.7);
  text-align: right;
}

/* Charts Section */
.charts-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.charts-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.charts-title {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.period-toggle {
  display: flex;
  gap: 8rpx;
  background-color: #f6f7f8;
  padding: 4rpx;
  border-radius: 12rpx;
}

.toggle-btn {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  transition: all 0.2s ease;
  background-color: transparent;
}

.toggle-btn.active {
  background-color: white;
  color: #2b8cee;
  box-shadow: 0 2rpx 8rpx rgba(43, 140, 238, 0.2);
}

.toggle-btn:active {
  transform: scale(0.95);
}

/* Chart Container */
.chart-container {
  position: relative;
  height: 220rpx;
  margin-top: 16rpx;
}

.goal-line {
  position: absolute;
  top: 20%;
  left: 0;
  width: 100%;
  border-top: 1rpx dashed rgba(43, 140, 238, 0.4);
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}

.goal-label {
  font-family: 'Manrope', sans-serif;
  font-size: 20rpx;
  font-weight: 700;
  color: #2b8cee;
  background-color: white;
  padding: 0 8rpx;
  transform: translateY(-50%);
}

.chart-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
  height: 100%;
  align-items: end;
  padding: 0 0 24rpx;
}

.chart-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.bar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar {
  position: relative;
  width: 100%;
  max-width: 24rpx;
  border-radius: 12rpx 12rpx 0 0;
  background-color: rgba(43, 140, 238, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.bar:hover {
  background-color: rgba(43, 140, 238, 0.4);
}

.bar-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 12rpx 12rpx 0 0;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.bar:hover .bar-glow {
  opacity: 1;
}

.bar-label {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-family: 'Manrope', sans-serif;
  font-size: 20rpx;
  font-weight: 700;
  color: white;
  background-color: #1a1a1a;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  opacity: 0;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.bar:hover .bar-label {
  opacity: 1;
  bottom: -48rpx;
}

.day-label {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  text-align: center;
  letter-spacing: 0.5rpx;
}

/* Today's Intake Section */
.today-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.today-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.today-title {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.today-progress {
  background-color: rgba(43, 140, 238, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.progress-text {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 700;
  color: #2b8cee;
}

/* Timeline */
.timeline-container {
  display: grid;
  grid-template-columns: 40rpx 1fr;
  gap: 16rpx;
}

.timeline-item {
  display: contents;
}

.timeline-dot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(43, 140, 238, 0.1);
  border-radius: 50%;
  margin-top: 4rpx;
}

.timeline-icon {
  width: 18rpx;
  height: 18rpx;
}

.timeline-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  padding-bottom: 32rpx;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-title {
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.timeline-amount {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  background-color: #f6f7f8;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.timeline-time {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
}

.timeline-line {
  grid-column: 1;
  height: 100%;
  width: 1rpx;
  background-color: #e5e7eb;
  margin-left: 16rpx;
  margin-top: 4rpx;
}


