/* pages/medals/index.wxss */
.container {
  position: relative;
  display: flex;
  min-height: 100vh;
  width: 100%;
  flex-direction: column;
  overflow: hidden;
  background-color: #f6f7f8;
}

/* Top Navigation */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: rgba(246, 247, 248, 0.9);
  backdrop-filter: blur(12rpx);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  display: flex;
  align-items: center;
}

.nav-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: transparent;
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background-color: rgba(43, 140, 238, 0.1);
}

.nav-icon {
  width: 24rpx;
  height: 24rpx;
}

/* Title Section */
.title-section {
  padding: 32rpx 24rpx;
  margin-bottom: 8rpx;
}

.main-title {
  display: block;
  font-family: 'Manrope', sans-serif;
  font-size: 48rpx;
  font-weight: 800;
  color: #1a1a1a;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.4;
}

/* Progress Summary Card */
.progress-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e5e7eb;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.left-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.progress-label {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 700;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.progress-value {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 800;
  color: #2b8cee;
}

.right-section {
  display: flex;
  align-items: center;
}

.progress-icon {
  width: 36rpx;
  height: 36rpx;
}

.progress-bar-container {
  position: relative;
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bg {
  position: absolute;
  inset: 0;
  background-color: #e5e7eb;
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: linear-gradient(90deg, #2b8cee 0%, #1a6bb5 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* Featured Section */
.featured-section {
  padding: 0 24rpx 24rpx;
}

.section-title {
  display: block;
  font-family: 'Manrope', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.featured-medal {
  position: relative;
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #e5e7eb;
  overflow: hidden;
}

.medal-glow {
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 128rpx;
  height: 128rpx;
  background: radial-gradient(circle, rgba(43, 140, 238, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

.medal-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.medal-icon-container {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(43, 140, 238, 0.3);
}

.medal-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.medal-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #fbbf24;
  border: 2rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.badge-icon {
  width: 20rpx;
  height: 20rpx;
}

.medal-info {
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.medal-name {
  font-family: 'Manrope', sans-serif;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.medal-desc {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.4;
}

.medal-date {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  opacity: 0.7;
}

.share-btn {
  width: 100%;
  height: 48rpx;
  background-color: #07c160;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.share-btn:active {
  background-color: #059669;
  transform: scale(0.98);
}

.share-icon {
  width: 20rpx;
  height: 20rpx;
}

.share-text {
  font-family: 'Manrope', sans-serif;
  font-size: 28rpx;
  font-weight: 700;
  color: white;
}

/* Medals Grid Section */
.medals-grid-section {
  padding: 0 24rpx 80rpx;
}

.medals-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 24rpx;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.medal-item-container {
  background-color: white;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
  border: 1rpx solid #e5e7eb;
  transition: all 0.2s ease;
}

.medal-item-container:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.medal-item-container.locked {
  opacity: 0.5;
  filter: grayscale(100%);
}

.medal-circle {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.medal-item-container.unlocked .medal-circle {
  background: linear-gradient(135deg, #2b8cee 0%, #1a6bb5 100%);
  box-shadow: 0 4rpx 16rpx rgba(43, 140, 238, 0.3);
}

.medal-item-container.locked .medal-circle {
  background-color: #e5e7eb;
}

.medal-item-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.medal-lock {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lock-icon {
  width: 30rpx;
  height: 30rpx;
  color: white;
}

.medal-details {
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.medal-item-name {
  font-family: 'Manrope', sans-serif;
  font-size: 24rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.2;
}

.medal-item-desc {
  font-family: 'Manrope', sans-serif;
  font-size: 20rpx;
  font-weight: 500;
  color: #666666;
  line-height: 1.3;
}


